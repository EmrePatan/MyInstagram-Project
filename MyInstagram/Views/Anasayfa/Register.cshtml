@model Entities.ValueObjects.RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>MyInstagram'a Hoşgeldiniz</title>
</head>
<body>
    <div class="container">
        <div class="row">
            @Html.Partial("_Login&RegisterPV")
            <!---- Register ---->
            <div class="col-lg-6" id="Register">
                <div class="container box">
                    <div class="panel">
                        <div class="panel-heading">
                            <div class="panel-title">MyInstagram</div>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Register", "Anasayfa", FormMethod.Post))
                            {
                                <div class="textbox">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control",
                                   placeholder = "Ad",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px"
                               })
                                </div>
                                <div class="textbox">
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control",
                                   placeholder = "Soyad",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px"
                               })
                                </div>
                                <div class="textbox">
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control",
                                   placeholder = "Kullanıcı Adı",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px"
                               })
                                </div>
                                <div class="textbox">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control",
                                   placeholder = "E-mail",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px"
                               })
                                </div>
                                <div class="textbox">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control",
                                   placeholder = "Şifre",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px" })
                                </div>
                                <div class="textbox">
                                    @Html.PasswordFor(x => x.RePassword, new { @class = "form-control",
                                   placeholder = "Şifre Tekrar",
                                   style = "background-color:#f4f7e6;" +
                                   "border-radius:5px" })
                                </div>
                                <button type="submit" class="btn btn-block">Kaydol</button>
                            }
                            <hr />
                            @Html.ValidationSummary(false)
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body text-center">
                            <p>Hesabın var mı ? <a href="/Anasayfa/Login">Giriş Yap</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["NewUser"] != null || TempData["InUseUser"] != null)
    {
        <div class="modal" role="dialog">
            <div class="modal-content">
                <hr />
                <span class="close">&times;</span>
                <div class="text-center alert alert-@TempData["Result"]">@TempData["NewUser"] @TempData["InUseUser"]</div>
                <hr />
                <button type="button" class="btn-block btn-@TempData["Result"]" onclick="location.href='/Anasayfa/Login'">Giriş Yap</button>
            </div>
        </div>
    }

    <script>
        $(document).ready(function () {
            $(".modal").css('display', 'block');
        });


        document.getElementsByClassName("close")[0].addEventListener("click", function () {
            $(".modal").css('display', 'none');
        });
    </script>

    <style>
        body {
            background-color: ghostwhite;
        }

        .panel {
            width: 350px;
            border: solid;
            border-width: .036em;
            border-color: #eee6e6
        }

        .panel-title {
            font-family: 'Script MT';
            font-size: 45px;
            text-align: center;
        }

        .box {
            margin-top: 80px;
            margin-right: 200px;
            width: 350px;
            height: 500px;
            border: thin;
            border-color: white;
        }

        .textbox {
            padding-bottom: 5px;
            width: 300px;
            margin-left: 10px;
        }

        .btn, .btn:hover {
            background-color: #3897f0;
            color: white;
            border-radius: 5px;
            width: 300px;
            height: 30px;
            text-align: center;
            padding: 5px;
            margin-left: 10px;
        }

        :disabled {
            pointer-events: none
        }

        span {
            color: #efefef;
            height: 1px;
            position: relative;
            top: .45em;
            margin-left: 10px;
        }

        .text-center {
            font-size: 13px;
            color: #262626;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 200px;
            padding-left: 400px;
            padding-right: 450px;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.4);
        }

        .close {
            margin-right: 25px;
            margin-top: 5px;
        }
    </style>
</body>
</html>
